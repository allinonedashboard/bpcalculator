@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "Blood Pressure Category Calculator";
}


<h4>Blood Pressure Category Calculator</h4>
<p>This application will calculate the BP based on the values you provided</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BP.Systolic" class="control-label"></label>
                <input asp-for="BP.Systolic" class="form-control"/>
                <span asp-validation-for="BP.Systolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BP.Diastolic" class="control-label"></label>
                <input asp-for="BP.Diastolic" class="form-control" />
                <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="panel panel-primary" name="results" id="results">
                <div class="panel-heading text-uppercase" style="background: aquamarine;">
                    <strong>Your results</strong>
                </div>
                <div class="panel-body">
                    We have determined your BP from the data you have supplied.:
                    <span class="text-uppercase">
                        <strong>@Html.DisplayFor(model=> model.BP.Category, new { htmlAttributes = new { @class = "form-control" } })</strong>
                    </span>
                </div>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
